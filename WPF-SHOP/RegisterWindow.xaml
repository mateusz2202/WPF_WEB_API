<Window x:Class="WPF_SHOP.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SHOP"
        mc:Ignorable="d"
        Title="Register" Height="600" Width="600" Foreground="White" Background="#0F0F0F">
    <Grid>
        <Label Foreground="Wheat"
               FontSize="30"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Content="Sign up"
               Margin="20">
        </Label>
        <Border 
                 VerticalAlignment="Center"
                 HorizontalAlignment="Center" 
                Padding="20"
                CornerRadius="20" BorderBrush="Wheat" BorderThickness="2">
            <StackPanel>
                <Label Content="Name:" Foreground="Wheat"></Label>
                <TextBox x:Name="TB_Name"
                     Width="300"                   
                     FontSize="20"
                     MaxLength="50">
                </TextBox>
                <Label Content="Last name:" Foreground="Wheat"></Label>
                <TextBox x:Name="TB_LastName"
                     Width="300"                   
                     FontSize="20"
                     MaxLength="50">
                </TextBox>
                <Label Content="Email:" Foreground="Wheat"></Label>
                <TextBox x:Name="TB_Email"
                     Width="300"                   
                     FontSize="20"
                     MaxLength="50">
                </TextBox>
                <Label Content="Password:" Foreground="Wheat"></Label>
                <PasswordBox x:Name="PB_Password"
                     Width="300"                   
                     FontSize="20"
                     MaxLength="32">
                </PasswordBox>
                <Label Content="Confirm password:" Foreground="Wheat"></Label>
                <PasswordBox x:Name="PB_ConfirmPassword"
                     Width="300"                   
                     FontSize="20"
                     MaxLength="32">
                </PasswordBox>
                <StackPanel Orientation="Horizontal" >
                    <Button
                        Width="100"   
                        Margin="20"
                        Padding="5"
                        FontSize="16"
                    Content="Sign in"
                        Click="BT_Click_SigIn"></Button>
                    <Button
                         Width="100"   
                        Margin="20"
                        Padding="5"
                        FontSize="16"
                    Content="Sign up"
                        Click="BT_CLick_SignUp"></Button>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Window>
